pipeline{
    agent any
    environment{
                DOCKERHUB_CREDENTIALS = credentials('docker')
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }

    stages{
        stage('Build'){
            steps{
                sh 'docker-compose -f docker-compose.yml -f docker-compose.prod.yml build'
            }
        }
        stage('Login to Docker Hub'){
           
            steps{
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('push'){
            steps{
                sh 'docker-compose -f docker-compose.yml -f docker-compose.prod.yml push'
            }
        }
    }
    post {
    always {
        sh 'docker logout'
        emailext {
            subject: "Pipeline Status: ${currentBuild.result}"
            body: '''<html>
                        <body>
                            <p>Build Status: ${currentBuild.result} and Build Number: ${currentBuild.number}</p>
                        </body>
                     </html>'''
            to: 'harishdev1010@gmail.com'
            from: 'Programmer Server Pipeline'
            replyTo: 'Programmer Server Pipeline'
            mimeType: 'text/html'
        }
    }
}