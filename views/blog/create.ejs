<% layout('layouts/boilerplate')%>


    <section>
        <div class="container mt-5">
            <div class="row">
                <div class="col-7 ">
                    <h4 class="pb-3">Create a Blog post.</h4>
                    <hr class="pb-3">
                    <form action="/blogserver" method="post" class="needs-validation" novalidate>
                        <div class="card  shadow-sm">

                            <div class="card-body">
                                <h5 class="card-title">Blog Post</h5>
                                <div class="mb-3">
                                    <input type="text" class="form-control" name="blog[name]" placeholder="title"
                                        required>
                                    <div class="invalid-feedback">
                                        Give it a title
                                    </div>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>
                                <div class="mb-3">

                                    <textarea required placeholder="Text" class="form-control" name="blog[write]"
                                        rows="6"></textarea>
                                    <div class="invalid-feedback">
                                        Title !!!
                                    </div>
                                    <div class="valid-feedback">
                                        Looks good, Nice Job.
                                    </div>
                                </div>
                                <hr>
                                <button type="submit">Create</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-5"></div>
            </div>
        </div>
    </section>

    <script src="../js/clientvalidation.js"></script>